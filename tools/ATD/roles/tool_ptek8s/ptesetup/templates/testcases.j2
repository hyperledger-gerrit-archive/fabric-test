set -e

echo "##########################"
echo "STARTING THE PTE CONTAINER"
echo "##########################"
PREFIX="result"

cp -r CITest/*.tx /var/hyperledger/fabric/artifacts/keyfiles/
cd $GOPATH/src/github.com/hyperledger/fabric-test/tools/PTE/CITest/scripts
CWD=$PWD/../Logs
